<!DOCTYPE html>
<html lang="nl">

<%- include partials/head.ejs %>
<title>Details</title>
</head>

<body>
  <%- include partials/header.ejs %>
   <article >
<div class="movie-details">

             <div class="img-container">
                 <img src="<%=data.review.imgURL%>" alt="<%= data.review.reviewTitle%> cover">
             </div>
                <div class="video-container">
                      <iframe class="video"type="text/html"
                          src="<%=data.review.trailerURL%>"
                          frameborder="0">
                      </iframe>
                </div>

             <section>

               <h1><%=data.review.seriesName%></h1>

                <p><span>Seizoenen: </span><%=data.review.seasons %></p>
                <p><span>Gemiddelde tijd per aflervering: </span> <%=data.review.duration %></p>
                <p> <span>IMDB cijfer: </span><%=data.review.imdbRating %></p>
                <p class="text"><%= data.review.reviewPlot%></p>

             </section>
</div>

            <section class="review">
                  <h2><%= data.review.reviewTitle%></h2>
                  <p class="text"><%= data.review.reviewIntro %></p>

            </section>


   </article>
   <section class="comments">
   <h2>Wat vind u van deze serie?</h2>
    <ul class="comment-list">
      <% for(var i=0; i<data.comments.length; i++) {%>
            <li>
              <h4><%= data.comments[i].username%></h4>
              <p><%= data.comments[i].text%></p>
              <time><%= data.comments[i].time%></time>
            </li>
        <% } %>
    </ul>
     <form action="/details" enctype="multipart/form-data" method="post">

        <label for="">
            <span>Reactie plaatsen</span>
            <input type="text" placeholder="Reageer">
        </label>

        <input type="submit" value="Reactie Plaatsen">

     </form>
   </section>

   <script src="/socket.io/socket.io.js"></script>
   <script src="/javascripts/comment.js"></script>
</body>

</html>
