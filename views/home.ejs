<!DOCTYPE html>
<html lang="nl">

<%- include partials/head.ejs %>
    <title>
        <%= title %>
    </title>
    </head>
    <body>
        <%- include partials/header.ejs %>

            <main class="overview-container">

                <section class="match-overview-container">
                    <h1>Speciaal Voor Jou</h1>
                    <div class="best-match">
                        <img class="match-img" src="<%=userData.user.profile.matches[0][0].data.review.imgURL%>" alt="">
                        <a href="/detail/<%=userData.user.profile.matches[0][0].data.review.seriesName %>">
                            <h2 class="best-match-header">Jouw Beste Match</h2>
                        </a>
                    </div>
                    <div class="secondary-match">
                        <img src="<%=userData.user.profile.matches[0][1].data.review.imgURL%>" alt="">
                    </div>
                    <div class="secondary-match">
                        <img src="<%=userData.user.profile.matches[0][2].data.review.imgURL%>" alt="">
                    </div>
                    <div class="secondary-match">
                        <img src="<%=userData.user.profile.matches[0][3].data.review.imgURL%>" alt="">
                    </div>
                    <div class="secondary-match">
                        <img src="<%=userData.user.profile.matches[0][4].data.review.imgURL%>" alt="">
                    </div>
                </section>

                <hr>
                <section class="review-overview-container">
                    <h2>Laatste Recensies</h2>
                    <% for(var i=0; i<6; i++) {%>
                        <div class="review">
                            <div>
                                <img src="<%=reviewData[i].review.imgURL%>" alt="">
                            </div>
                            <div class="text-container">
                                <span class="rating">Score: <%= reviewData[i].review.reviewRating %></span>
                                <a class="detail-link" href="/detail/<%= reviewData[i].review.seriesName %>">
                                    <h3><%= reviewData[i].review.seriesName %></h3>
                                </a>
                                <p class="post-date">Op: <%= reviewData[i].user.postDate %></p>
                                <h4><%= reviewData[i].review.reviewTitle %></h4>
                                <p class="post-user">Door <%= reviewData[i].user.name %></p>


                                <!-- Laatste spatie opzoeken uit de array (lastIndexOf) en dan het woord erna weghalen -->
                                <!-- Gemanipuleerde reviewData sturen naar de view, niet in de view doen -->

                                <p class="intro-text"><%= reviewData[i].review.reviewPlot.substring(0, 210) %>
                                    ...
                                    <a class="bottom-link" href="/detail/<%= reviewData[i].review.seriesName %>">
                                        Lees meer
                                    </a>
                                </p>
                            </div>
                        </div>
                        <% } %>
                </section>

            </main>
            <script src="/javascripts/filter.js"></script>
            <script src="/javascripts/navigation.js"></script>
    </body>
</html>
