<% include ../partials/head %>
    <link rel="stylesheet" href="/stylesheets/seriesgame.css">
    <title><%= data.review.seriesName %></title>
</head>

<body class="series-detail-body">
     <main>
        <% if (data) { %>
            <a class="backlink" href="javascript:history.back()">âœ•</a>
            <section class="poster-image-container">
                <img class='poster-image' src="<%= data.review.imgURL %>">
            </section>
            <span class="rating"><%= data.review.imdbRating %></span>
            <div class="detail-body">
                <section class="meta-container">
                    <h1><%= data.review.seriesName %></h1>
                    <div class="meta">
                        <h3 class="authors"><%= data.review.producers %></h3>
                        <span class="date-info">
                            <%= data.review.startYear %> - <%= data.review.endYear %>
                        </span>
                    </div>
                </section>
                <section class="plot">
                    <p><%= data.review.plot %></p>
                </section>

                <h3>Bekijk de trailer</h3>
                <video src=""></video>

            </div>
        <% } else { %>
            <h2>Uh oh.. serie niet gevonden.</h2>
        <% }%>
     </main>
 </body>
