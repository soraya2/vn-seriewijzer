<% include ../partials/head %>
    <link rel="stylesheet" href="/stylesheets/seriesgame.css">
    <title><%= data.review.seriesName %></title>
</head>

<body id="series-detail">
     <main>
        <% if (data) { %>
            <a class="backlink" href="javascript:history.back()">âœ•</a>
            <h1><%= data.review.seriesName %></h1>
            <section class="poster">
                <img src="<%= data.review.imgURL %>">
                <span class="rating"><%= data.review.imdbRating %></span>
            </section>
            <section>
                <div class="meta">
                    <h3><%= data.review.producers %></h3>
                    <p class="date-info">
                        <%= data.review.startYear %> - <%= data.review.endYear %>
                    </p>
                </div>
                <p><%- data.review.reviewPlot %></p>
            </section>
            <section class="video">
                <h3>Bekijk de trailer</h3>
                <iframe src="<%- data.review.trailerURL %>"></iframe>
            </section>
        <% } else { %>
            <h2>Uh oh.. serie niet gevonden.</h2>
        <% }%>
     </main>
 </body>
